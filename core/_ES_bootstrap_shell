# vim:filetype=sh
function _ES_bootstrap_shell() {
  local marker="$(_ES_marker BOOTSTRAP_SHELL)"
  local in_screen=0
  if [ -n "$STY" -o -n "$EXPECTSSH_IN_SCREEN" ]; then in_screen=1; fi
  local CMD_ARRAY=("$@")
  local args=$(printf "EXPECTSSH_SHLVL %s EXPECTSSH_IN_SCREEN {%s} EXPECTSSH_PORT %s CMD_ARRAY {%s}" $EXPECTSSH_SHLVL "$in_screen" $EXPECTSSH_PORT "$(declare -p CMD_ARRAY)")
  _ES_send_marker "$marker" "$args"
}
export -f _ES_bootstrap_shell
