# vim:filetype=sh
#
# generate a self-loading stub function for each function
#
_esh_gen_stub() {
  local funcfile=$1
  local funcname=${funcfile/*.}

  declare -F -- $funcname >/dev/null || {
    local f=$funcname'() { _esh_bootstrap '$funcfile' "$@"; }'
    eval -- "$f"
    export -f -- $funcname
    unalias -- $funcname 2>/dev/null
  }
}
export -f _esh_gen_stub
