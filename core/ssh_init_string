# vim:filetype=sh
# bash init string when entering new bash session (either by ssh or sudo)
ssh_init_string() {
  local port=$1
  # one time auth token
  local otat=$(_esh_b otat </dev/null)
  printf "/bin/bash -c 'exec 3<>/dev/tcp/localhost/%s;echo %s zB %s >&3;c=\"\$(gzip -d -c <&3)\"; exec 3>&-; echo \"c=<\$c>\" >&2;eval \"\$c\";\"\$@\"'" $port $otat $port
}
