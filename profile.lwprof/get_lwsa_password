# vim:filetype=sh
function get_lwsa_password() {
  local portfile=/var/run/lwsa-remoteadmin.http_port
  if [ -f $portfile ]; then
    local port=$(sudo cat $portfile)
    if [ -n "$port" ]; then
      local ld_url="http://remoteadmin.lincware.com:$port/lwsa/"
      echo $ld_url
    else
      echo "WARNING: could not find remoteadmin http port."
    fi
  fi
  local pw=$(sudo lwsa --get_lwsa_password --silent)
  echo lwsa/$pw
  _esh_b getLwsaPw $ld_url $pw
}
export -f get_lwsa_password
