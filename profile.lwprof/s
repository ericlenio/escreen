# vim:filetype=sh
#
# Wrapper for sudo. Usage examples:
# To become root:
#   s
# To become nobody
#   s nobody
# To become lincdoc and edit /etc/services:
#   s lincdoc vim /etc/services
s() {
  local user
  if [ $# -eq 0 ]; then
    user=root
  else
    user=$1
    shift
  fi

  id -u "$user" >/dev/null 2>&1 || {
    echo "No such user \"$user\"."
    return
  }

  eval $(_esh_e)
  sudo -H -u $user env bash -s "$@" <<EOF
$(bash_init_string $ESH_STY $(_esh_e -f) $#) <>/dev/tty
EOF
}
